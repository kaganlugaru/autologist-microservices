{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd telegram-parser && pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "cd telegram-parser && python telegram_parser.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}